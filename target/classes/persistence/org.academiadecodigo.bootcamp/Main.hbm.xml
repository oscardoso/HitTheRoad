<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="org.academiadecodigo.bootcamp.model.User" table="user">

        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="username" column="username"/>
        <property name="password" column="password" />
        <property name="email" column="email" />
        <set name="roles" table="roles" cascade="all">
            <key column="role_id"/>
            <many-to-many class="org.academiadecodigo.bootcamp.model.User" column="user_id" />
        </set>
    </class>

    <class name="org.academiadecodigo.bootcamp.model.Role" table="role">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="type" column="type"/>
        <set name="users" table="users" inverse="true">
            <key column="user_id" />
            <many-to-many column="role_id" class="org.academiadecodigo.bootcamp.model.Role"/>
        </set>
    </class>

</hibernate-mapping>